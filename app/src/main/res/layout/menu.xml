<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">
    <!--    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"-->

    <LinearLayout
        android:id="@+id/top_layover"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_gradient"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!-- <TextView
                 style="@style/BlackText"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:text="@string/read_comments_title"
                 android:textAppearance="?android:attr/textAppearanceLarge" />  -->
            <Button
                android:id="@+id/btnSetting"
                android:layout_width="30.5dp"
                android:layout_height="30.5dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/setting_button"
                android:onClick="btnSettingOnClick" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ne"/>

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="30.5dp"
                android:layout_height="30.5dp"
                android:layout_toLeftOf="@+id/btnProfil"
                android:background="@drawable/refresh"
                android:onClick="btnRefreshOnClick" />


         <!--   <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/refresh"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />     -->
            <Button
                android:id="@+id/btnProfil"
                android:layout_width="30.5dp"
                android:layout_height="30.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profil_button"
                android:onClick="btnProfilOnClick" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layover"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNeNerede"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNeredeOnClick"
                android:text="nerede"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNereye"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNereyeOnClick"
                android:text="nereye"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNasil"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNasilOnClick"
                android:text="nasıl"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNezaman"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNezamanOnClick"
                android:text="nezaman"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNedemek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNedemekOnClick"
                android:text="nedemek"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNedir"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNedirOnClick"
                android:text="nedir"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNeymis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNeymisOnClick"
                android:text="neymiş"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNekadar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNekadarOnClick"
                android:text="nekadar"
                android:background="@drawable/menu_list_item"/>

            <Button
                android:id="@+id/btnNeNeredeNekadar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="btnNeNeredeNekadarOnClick"
                android:text="nerede-nekadar"
                android:background="@drawable/menu_list_item"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
