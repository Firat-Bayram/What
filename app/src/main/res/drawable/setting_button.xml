<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#A9EFD5" />

                    <stroke android:width="1dp" android:color="#1b60f3"/>

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
            <item android:left="5dp" android:right="5dp">
                <bitmap android:gravity="center" android:src="@drawable/setting32x32" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#1bccf3" />

                    <stroke android:width="1dp" android:color="#1b60f3" android:dashGap="10dp" android:dashWidth="5dp"/>

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
            <item android:left="5dp" android:right="5dp">
                <bitmap android:gravity="center" android:paddingLeft="5dp" android:paddingRight="5dp" android:src="@drawable/setting32x32" />
            </item>
        </layer-list>
    </item>
</selector>